retrieve open_file, read_file, write_file, close_file, delete_file from Standard_IO;
retrieve print, convert_t from Standard;

function write_and_close(String filename, String data) -> None {
  Integer file_no = open_file(filename, 'w');
  write_file(file_no, data);
  close_file(file_no);
}

function read_and_close(String filename) -> String {
  Integer file_no = open_file(filename, 'r');
  String data = read_file(file_no);
  close_file(file_no);
  return data;
}

String data = "Here is some multi-line string data:\nEtc.\nEtc.\n\nABC\b\bxyz\b!ðŸ˜Š";
